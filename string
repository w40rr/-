//21
int main() {
int cifra1, cifra2, cifra3, cifra4;

std::string A = "I 1 the 2 3 4.";
std::string B = "am";
std::string C = "one";
std::string D = "who";
std::string F = "knocks";

A.resize( 70, ' ' );

cifra1 = A.find("1");
A.replace(cifra1, 1, B);

cifra2 = A.find("2");
A.replace(cifra2, 1, C);

cifra3 = A.find("3");
A.replace(cifra3, 1, D);

cifra4 = A.find("4");
A.replace(cifra4, 1, F);

std::cout << A << std::endl;
}

